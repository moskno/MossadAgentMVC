@model List<MissionDetails>

<h1>Mission List</h1>

<table style="width:100%; border-collapse: collapse;">
    <thead>
        <tr style="border-bottom: 2px solid #ddd;">
            <th style="padding: 10px;">Agent Nickname</th>
            <th style="padding: 10px;">Agent Location</th>
            <th style="padding: 10px;">Target Name</th>
            <th style="padding: 10px;">Target Role</th>
            <th style="padding: 10px;">Target Location</th>
            <th style="padding: 10px;">Distance</th>
            <th style="padding: 10px;">Time Left</th>
            <th style="padding: 10px;">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mission in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 10px;">@mission.AgentNickname</td>
                <td style="padding: 10px;">@mission.AgentLocation.x, @mission.AgentLocation.y</td>
                <td style="padding: 10px;">@mission.TargetName</td>
                <td style="padding: 10px;">@mission.TargetRole</td>
                <td style="padding: 10px;">@mission.TargetLocation.x, @mission.TargetLocation.y</td>
                <td style="padding: 10px;">@mission.Distance.ToString("F3")</td>
                <td style="padding: 10px;">@mission.TimeLeft</td>
                <td style="padding: 10px;"><a href="@Url.Action("Details", new { id = mission.MissionId })">View Details</a></td>
            </tr>
        }
    </tbody>
</table>
